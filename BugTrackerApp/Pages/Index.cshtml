@page
@model IndexModel
@{
    ViewData["Title"] = "Bugs page";
}

<div class="mx-auto">
    <div class="container mx-auto" id="container_items">
        <div class="mb-3">
        </div>
        <!--UI for mobile view-->
        @foreach (var Bug in Model.Bugs)
        {
            <div class="new-row d-sm-none shadow">
                <div class="col-md-10 mx-auto">
                    <img src="images/fixing-problem.png" class="w-25"/>
                    <h2 class="mt-3"><span class="text-primary">Bug</span> <span class="text-secondary">Details</span></h2>
                    <hr />
                    <dl class="dl-horizontal mt-4 mx-auto">
                        <dt id="text_underline">@Html.DisplayNameFor(modelItem => Bug.BugId)</dt>
                        <dd class="mb-4">@Html.DisplayFor(modelItem => Bug.BugId)</dd>

                        <dt id="text_underline">@Html.DisplayNameFor(modelItem => Bug.Date)</dt>
                        <dd class="mb-4">@Html.DisplayFor(modelItem => Bug.Date)</dd>

                        <dt id="text_underline">@Html.DisplayNameFor(modelItem => Bug.Description)</dt>
                        <dd class="mb-4">@Html.DisplayFor(modelItem => Bug.Description)</dd>

                        @if (Bug.Priority == "Low")
                        {
                            <dt id="text_underline">@Html.DisplayNameFor(modelItem => Bug.Priority)</dt>
                            <dd id="low_priority" class="mb-4">@Html.DisplayFor(modelItem => Bug.Priority)</dd>
                        }
                        @if (Bug.Priority == "Medium")
                        {
                            <dt id="text_underline">@Html.DisplayNameFor(modelItem => Bug.Priority)</dt>
                            <dd id="medium_priority" class="mb-4">@Html.DisplayFor(modelItem => Bug.Priority)</dd>
                        }
                        @if (Bug.Priority == "High")
                        {
                            <dt id="text_underline">@Html.DisplayNameFor(modelItem => Bug.Priority)</dt>
                            <dd id="high_priority" class="mb-4">@Html.DisplayFor(modelItem => Bug.Priority)</dd>
                        }

                        <dt id="text_underline">@Html.DisplayNameFor(modelItem => Bug.Assignment)</dt>
                        <dd id="assignment" class="mb-4">@Html.DisplayFor(modelItem => Bug.Assignment)</dd>
                    </dl>
                    <div class="mb-4">
                        <form method="post" id="center_text" asp-page-handler="View" asp-route-id="@Bug.BugId">
                            <a class="btn btn-sm btn-dark shadow" asp-page="ViewBug" asp-route-id="@Bug.BugId">View</a>
                        </form>
                    </div>
                </div>
            </div>
        }
        <!--UI for desktop view-->
        <div class="row mx-auto d-sm-inline-flex d-none">
        @foreach (var Bug in Model.Bugs)
        {
                <div class="col-3 mb-3">
                    <div class="card new-row" id="row_hover">
                        <h5 class="card-title mx-auto mt-3">Date</h5>
                        <div class="mx-auto" id="card-text">
                            @Html.DisplayFor(modelItem => Bug.Date)
                        </div>
                        <h5 class="card-title mt-4 mx-auto">Short Description</h5>
                        <div class="mx-auto px-2" id="card-text">
                            @Html.DisplayFor(modelItem => Bug.Description)
                        </div>
                        <h5 class="card-title mt-4 mx-auto">Priority</h5>
                        @if (Bug.Priority == "Low")
                        {
                            <div id="low_priority" class="shadow mx-auto mb-3">@Html.DisplayFor(modelItem => Bug.Priority)</div>
                        }
                        @if (Bug.Priority == "Medium")
                        {
                            <div id="medium_priority" class="shadow mx-auto mb-3">@Html.DisplayFor(modelItem => Bug.Priority)</div>
                        }
                        @if (Bug.Priority == "High")
                        {
                            <div id="high_priority" class="shadow mx-auto mb-3">@Html.DisplayFor(modelIteam => Bug.Priority)</div>
                        }
                        <div class="mx-auto">
                        <form method="post" asp-page-handler="View" asp-route-id="@Bug.BugId">
                            <a class="btn btn-sm btn-secondary shadow mx-auto mt-5" asp-page="ViewBug" asp-route-id="@Bug.BugId">View Bug</a>
                        </form>
                        </div>
                    </div>
                </div>
        }
        </div>
    <div class="mx-auto">
        <a class="my-5 btn btn-md btn-secondary mx-auto shadow" href="AddBug" style="display: inline-flex">+ Add a bug</a>
    </div>
    </div>
</div>

