@page
@model BugTrackerApp.Pages.AddBugModel
@{ViewData["Title"] = "Add Bug";

}

<h2>Add a New Bug Record</h2>
<h3>@ViewData["sentence"]</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="bug.Id" class="control-label"></label>
                <input asp-for="bug.Id" class="form-control" name="Id" />
                <span asp-validation-for="bug.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bug.Date" class="control-label"></label>
                <input asp-for="bug.Date" class="form-control" name="Date" />
                <span asp-validation-for="bug.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bug.Description" class="control-label"></label>
                <input asp-for="bug.Description" class="form-control" name="Description" />
                <span asp-validation-for="bug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bug.Priority" class="control-label"></label>
                <input asp-for="bug.Priority" class="form-control" name="Priority" />
                <span asp-validation-for="bug.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bug.Assignment" class="control-label"></label>
                <input asp-for="bug.Assignment" class="form-control" name="Assignment" />
                <span asp-validation-for="bug.Assignment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Bug" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to HomePage</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

