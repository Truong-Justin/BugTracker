@page
@model BugTrackerApp.Pages.ProjectManagers.ViewManagerModel
@{
    ViewData["Title"] = "Manager Details";
}

<!--Mobile UI-->
<div class="container d-sm-none">
    <div class="my-5 mx-auto">
        <div class="card shadow bg-light">
            <div class="col-md-11 mx-auto">
                <h1 class="mt-3 text-center text-decoration-underline">Manager Details</h1>
                <hr />
                <div class="card px-3 py-3 mx-3 my-4 shadow">
                    <div class="row mt-5">
                        <h4 class="text-decoration-underline text-center">Project Manager Id</h4>
                        <h5 class="fw-light text-center card-text">@Html.DisplayFor(modelItem => modelItem.ProjectManager.ProjectManagerId)</h5>
                    </div>
                    <div class="row mt-5">
                        <h4 class="text-decoration-underline text-center">Name</h4>
                        <h5 class="fw-light text-center card-text">@Html.DisplayFor(modelItem => modelItem.ProjectManager.FirstName) @Html.DisplayFor(modelItem => modelItem.ProjectManager.LastName)</h5>
                    </div>
                    <div class="row mt-5">
                        <h4 class="text-decoration-underline text-center">Hire Date</h4>
                        <h5 class="fw-light text-center card-text">@Html.DisplayFor(modelItem => modelItem.ProjectManager.HireDate)</h5>
                    </div>
                    <div class="row mt-5">
                        <h4 class="text-decoration-underline text-center">Address</h4>
                        <h5 class="fw-light text-center card-text">@Html.DisplayFor(modelItem => modelItem.ProjectManager.Address)</h5>
                    </div>
                    <div class="row mt-5">
                        <h4 class="text-decoration-underline text-center">Zip Code</h4>
                        <h5 class="fw-light text-center card-text">@Html.DisplayFor(modelItem => modelItem.ProjectManager.Zip)</h5>
                    </div>
                    <div class="row my-5">
                        <h4 class="text-decoration-underline text-center">Phone Number</h4>
                        <h5 class="fw-light text-center card-text">@Html.DisplayFor(modelItem => modelItem.ProjectManager.Phone)</h5>
                    </div>
                    <div class="mt-5 py-3 text-center card shadow">
                        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.ProjectManager.ProjectManagerId">
                            <a class="btn btn-secondary shadow" asp-page="/ProjectManagers/ProjectManagerIndex">Back</a>
                            <button class="btn btn-danger shadow" type="submit">Delete</button>
                        </form>
                    </div>
                    <hr />
                    <div class="py-3 px-3 card shadow">
                        <h1 class="text-decoration-underline text-center">Projects In Charge Of</h1>
                        <!--All projects that this project manager is in charge of
                            is outputted as a list of links that point to each project page-->
                        <ol class="mt-3">
                            @foreach (var Project in Model.ProjectManagerProjects)
                            {
                                <li><a asp-page="/Projects/ViewProject" asp-route-id="@Project.ProjectId">@Html.DisplayFor(modelItem => Project.ProjectTitle)</a></li>
                            }
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Desktop UI-->
<div class="container d-none d-sm-none d-md-block">
    <div class="my-5 mx-auto">
        <div class="card shadow bg-light">
            <div class="col-md-11 mx-auto">
                <h1 class="mt-3 text-center text-decoration-underline">Manager Details</h1>
                <hr />
                <div class="card px-5 py-5 mx-5 my-5 shadow">
                    <div class="row my-5">
                        <div class="col">
                            <div class="form-outline">
                                <h3 class="text-decoration-underline">First Name</h3>
                                <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.ProjectManager.FirstName)</h5>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <h3 class="text-decoration-underline">Last Name</h3>
                                <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.ProjectManager.LastName)</h5>
                            </div>
                        </div>
                    </div>
                    <div class="row my-5">
                        <div class="col">
                            <div class="form-outline">
                                <h3 class="text-decoration-underline">Manager Id</h3>
                                <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.ProjectManager.ProjectManagerId)</h5>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <h3 class="text-decoration-underline">Hire Date</h3>
                                <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.ProjectManager.HireDate)</h5>
                            </div>
                        </div>
                    </div>
                    <div class="row my-5">
                        <div class="col">
                            <div class="form-outline">
                                <h3 class="text-decoration-underline">Address</h3>
                                <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.ProjectManager.Address)</h5>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <h3 class="text-decoration-underline">Zip Code</h3>
                                <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.ProjectManager.Zip)</h5>
                            </div>
                        </div>
                    </div>
                    <div class="row my-5">
                        <div class="col">
                            <div class="form-outline">
                                <h3 class="text-decoration-underline">Phone Number</h3>
                                <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.ProjectManager.Phone)</h5>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5">
                        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.ProjectManager.ProjectManagerId">
                            <a class="btn btn-secondary shadow" asp-page="/ProjectManagers/ProjectManagerIndex">Back</a>
                            <a class="btn btn-dark shadow" asp-page="EditProjectManager" asp-route-id=@Model.ProjectManager.ProjectManagerId>Edit Manager</a>
                            <button class="btn btn-danger shadow" type="submit">Delete</button>
                        </form>
                    </div>
                    <hr class="my-5"/>
                    <div class="card bg-light shadow">
                        <div class="row my-5">
                            <div class="col px-5">
                                <div class="form-outline">
                                    <h3 class="text-decoration-underline">Projects In-Charge Of</h3>
                                    <!--All projects that this project manager is in charge of
                                        is outputted as a list of links that point to each project page-->
                                    <ol>
                                        @foreach (var Project in Model.ProjectManagerProjects)
                                        {
                                            <li><a asp-page="/Projects/ViewProject" asp-route-id="@Project.ProjectId">@Html.DisplayFor(modelItem => Project.ProjectTitle)</a></li>
                                        }
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>