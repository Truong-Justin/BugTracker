@page
@model BugTrackerApp.Pages.ProjectManagerIndexModel
@{
}

<div class="mx-auto">
    <div class="container mx-auto" id="container_items">
        <div class="mb-3">
        </div>
        <!--UI for mobile view-->
        @foreach (var ProjectManager in Model.ProjectManagers)
        {
            <div class="new-row d-sm-none shadow mb-3">
                <div class="col-md-10">
                    <div class="text-center">
                        <h2 class="mt-3"><span class="text-primary">Project Manager </span> <span class="text-secondary">Details</span></h2>
                    </div>
                    <hr />
                    <dl class="dl-horizontal mt-4">
                        <div class="text-center">
                            <dt id="text_underline">@Html.DisplayNameFor(modelItem => ProjectManager.ProjectManagerId)</dt>
                            <dd class="mb-4">@Html.DisplayFor(modelItem => ProjectManager.ProjectManagerId)</dd>
                        </div>
                        <div class="text-center">
                            <dt id="text_underline">Project Manager Name</dt>
                            <dd class="mb-4">@Html.DisplayFor(modelItem => ProjectManager.FirstName) @Html.DisplayFor(modelItem => ProjectManager.LastName)</dd>
                        </div>
                    </dl>
                    <div class="mb-4">
                        <form method="post" id="center_text" asp-page-handler="View" asp-route-id="@ProjectManager.ProjectManagerId">
                            <a class="btn btn-sm btn-dark shadow" asp-page="ViewManager" asp-route-id="@ProjectManager.ProjectManagerId">View</a>
                        </form>
                    </div>
                </div>
            </div>
        }
        <!--UI for desktop view-->
    <div class="row mx-auto d-sm-inline-flex d-none">
        <h1 class="text-secondary text-center mb-5" id="text_underline"><span class="text-primary">Project</span> Managers</h1>
        @foreach (var ProjectManager in Model.ProjectManagers)
        {
            <div class="col-3 w-100 my-3">
                <div class="card new-row" id="row_hover">
                    <h5 class="card-title mt-4 mx-auto">Manager Id</h5>
                    <div class="mx-auto" id="card-text">
                        @Html.DisplayFor(modelItem => ProjectManager.ProjectManagerId)
                    </div>
                    <h5 class="card-title mt-4 mx-auto">Manager Name</h5>
                    <div class="mx-auto px-2" id="card-text">
                        @Html.DisplayFor(modelItem => ProjectManager.FirstName) @Html.DisplayFor(modelItem => ProjectManager.LastName)
                    </div>
                    <!--TODO => Make a back-end call that outputs the number of projects this project manager is in charge of-->
                    @*<h5 class="card-title mt-4 mx-auto"># Of Projects</h5>
                    <div class="mx-auto px-2" id="card-text">
                        6
                    </div>*@
                    <div class="mx-auto">
                        <form method="post" asp-page-handler="View" asp-route-id="@ProjectManager.ProjectManagerId">
                            <a class="btn btn-sm btn-secondary shadow mx-auto mt-5" asp-page="ViewManager" asp-route-id="@ProjectManager.ProjectManagerId">View Manager</a>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
        <div class="mx-auto">
            <a class="my-5 btn btn-md btn-secondary mx-auto shadow" href="AddProjectManager" style="display: inline-flex">+ Add a PM</a>
        </div>
    </div>
</div>
