@page
@model BugTrackerApp.Pages.AddBugModel
@{ViewData["Title"] = "Add Bug";

}

<!--Mobile UI-->
<div class="container d-sm-none">
    <div class="my-5 mx-auto">
        <div class="card shadow bg-light">
            <div class="col-md-11 mx-auto">
                <h1 class="mt-3 text-center text-decoration-underline">Add Bug</h1>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card px-3 py-3 mx-3 my-4 shadow">
                        <div class="row mt-5">
                            <div class="col text-center mx-auto">
                                <h4 class="text-decoration-underline text-center">Project Assignment</h4>
                                <select class="form-control shadow w-75 mx-auto text-center" asp-for="SelectedProjectId" asp-items="@(Model._entityDataAccess.GetProjectTitles(Model.Projects))">
                                    <option value="0">-- Select Project --</option>
                                </select>
                                <span asp-validation-for="Project.ProjectTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <h4 class="text-decoration-underline text-center">Date Submitted</h4>
                            <input asp-for="Bug.Date" type="date" class="form-control shadow w-75 mx-auto text-center" asp-format="{0:MM-dd-yyyy}" name="Date" />
                            <span asp-validation-for="Bug.Date" class="text-danger"></span>
                        </div>
                        <div class="row mt-5">
                            <h4 class="text-decoration-underline text-center">Description</h4>
                            <textarea placeholder="Enter a description" asp-for="Bug.Description" class="form-control shadow mx-auto text-center w-75" name="Description" data-val="true" data-val-required="A description is required."></textarea>
                            <span asp-validation-for="Bug.Description" class="text-danger"></span>
                        </div>
                        <div class="row mt-5">
                            <h4 class="text-decoration-underline text-center">Priority</h4>
                            <select asp-for="Bug.Priority" class="form-control shadow w-75 mx-auto" name="Priority">
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                            </select>
                            <span asp-validation-for="Bug.Priority" class="text-danger"></span>
                        </div>
                        <div class="row my-5">
                            <h4 class="text-decoration-underline text-center">Employee Assignment</h4>
                            <select asp-for="SelectedEmployee" class="form-control shadow w-75 mx-auto text-center" asp-items="@(Model._peopleDataAccess.GetEmployeeNames(Model.Employees))">
                                <option value="0">-- Assign an Employee --</option>
                            </select>
                            <span asp-validation-for="Bug.Assignment" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="text-center">
                            <a class="btn btn-secondary shadow" asp-page="/Bugs/Index">Back</a>
                            <input type="submit" value="Add Bug" class="btn btn-primary shadow" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--Desktop UI-->
<div class="container d-none d-sm-none d-md-block">
    <div class="my-5 mx-auto">
        <div class="card shadow bg-light">
            <div class="col-md-11 mx-auto">
                <h1 class="mt-3 text-center text-secondary text-decoration-underline">Add Bug</h1>
                <hr />
                <form method="post">
                    <div class="card px-5 py-5 mx-5 my-5 shadow">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row my-5">
                            <div class="col">
                                <div class="form-outline">
                                    <h4 class="text-decoration-underline">Project Assignment</h4>
                                    <select class="form-control shadow w-75" asp-for="SelectedProjectId" asp-items="@(Model._entityDataAccess.GetProjectTitles(Model.Projects))" data-val="True" data-val-required="A bug must belong to an existing project.">
                                        <option value="0" class="text-center">-- Select project --</option>
                                    </select>
                                    <span asp-validation-for="Project.ProjectTitle" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-outline">
                                    <h4 class="text-decoration-underline">Employee Assignment</h4>
                                    <select class="form-control shadow w-75" asp-for="SelectedEmployee" asp-items="@(Model._peopleDataAccess.GetEmployeeNames(Model.Employees))">
                                        <option value="0">-- Assign an employee --</option>
                                    </select>
                                    <span asp-validation-for="Bug.Assignment" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row my-5">
                            <div class="col">
                                <div class="form-outline">
                                    <h4 class="text-decoration-underline">Date Submitted</h4>
                                    <input asp-for="Bug.Date" type="date" class="shadow form-control w-75" asp-format="{0:MM-dd-yyyy}" name="Date" data-val="True" data-val-required="A date is required." />
                                    <span asp-validation-for="Bug.Date" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-outline">
                                    <h4 class="text-decoration-underline">Priority</h4>
                                    <select asp-for="Bug.Priority" class="form-control shadow w-75" name="Priority" data-val="True" data-val-required="A priority is required.">
                                        <option value="Low">Low</option>
                                        <option value="Medium">Medium</option>
                                        <option value="High">High</option>
                                    </select>
                                    <span asp-validation-for="Bug.Priority" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row my-5">
                            <div class="form-outline">
                                <h4 class="text-decoration-underline">Description</h4>
                                <textarea placeholder="Enter a description." rows="4" asp-for="Bug.Description" type="text" class="form-control" name="Description" data-val="True" data-val-required="A description is required."></textarea>
                                <span asp-validation-for="Bug.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mt-5">
                            <a class="btn btn-secondary shadow" asp-page="/Bugs/Index">Back</a>
                            <input type="submit" value="Add Bug" class="btn btn-primary shadow" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

