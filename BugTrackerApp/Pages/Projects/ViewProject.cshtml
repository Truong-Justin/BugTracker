@page
@model BugTrackerApp.Pages.Projects.ViewProjectModel
@{
    ViewData["Title"] = "Project Details";
}

<div class="container">
    <div class="my-5 mx-auto" id="container_items">
        <div class="new-row shadow">
            <div class="col-md-11 mx-auto">
                <h2 class="mt-3 mx-auto"><span class="text-primary">Project</span> <span class="text-secondary">Details</span></h2>
                <hr />
                <dl class="dl-horizontal mt-4">
                    <dt>@Html.DisplayNameFor(modelItem => modelItem.Project.ProjectId)</dt>
                    <dd class="mb-4">@Html.DisplayFor(modelItem => modelItem.Project.ProjectId)</dd>

                    <dt>Project Manager</dt>
                    <dd class="mb-4">@Html.DisplayFor(modelItem => modelItem.ProjectManager.FirstName) @Html.DisplayFor(modelItem => modelItem.ProjectManager.LastName)</dd>

                    <dt>@Html.DisplayNameFor(modelItem => modelItem.Project.Date)</dt>
                    <dd class="mb-4">@Html.DisplayFor(model => model.Project.Date)</dd>

                    <dt>@Html.DisplayNameFor(modelItem => modelItem.Project.ProjectTitle)</dt>
                    <dd class="mb-4">@Html.DisplayFor(modelItem => modelItem.Project.ProjectTitle)</dd>

                    <dt>@Html.DisplayNameFor(modelItem => modelItem.Project.Description)</dt>
                    <dd class="mb-4">@Html.DisplayFor(modelItem => modelItem.Project.Description)</dd>

                    @if (Model.Project.Priority == "Low")
                    {
                        <dt>@Html.DisplayNameFor(modelItem => modelItem.Project.Priority)</dt>
                        <div id="low_priority" class="shadow mx-auto mb-3">@Html.DisplayFor(modelItem => modelItem.Project.Priority)</div>
                    }
                    @if (Model.Project.Priority == "Medium")
                    {
                        <dt>@Html.DisplayNameFor(modelItem => modelItem.Project.Priority)</dt>
                        <div id="medium_priority" class="shadow mx-auto mb-3">@Html.DisplayFor(modelItem => modelItem.Project.Priority)</div>
                    }
                    @if (Model.Project.Priority == "High")
                    {
                        <dt>@Html.DisplayNameFor(modelItem => modelItem.Project.Priority)</dt>
                        <div id="high_priority" class="shadow mx-auto mb-3">@Html.DisplayFor(modelItem => modelItem.Project.Priority)</div>
                    }
                </dl>
                <div class="mb-4">
                    <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Project.ProjectId">
                        <a class="btn btn-secondary shadow" asp-page="/Projects/ProjectIndex">Back</a>
                        <a class="btn btn-dark shadow" asp-page="EditProject" asp-route-id=@Model.Project.ProjectId>Edit Project</a>
                        <button class="btn btn-danger shadow" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>