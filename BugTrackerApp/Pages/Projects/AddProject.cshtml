@page
@model BugTrackerApp.Pages.AddProjectModel
@{ViewData["Title"] = "Add Project";

}

<!--Desktop UI-->
<div class="container my-5">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card px-5 py-5 mx-5 mt-5 shadow bg-light">
            <h1 class="mb-5 text-secondary text-center">Add Project</h1>
            <hr />
            <div class="row my-5">
                <div class="col">
                    <div class="form-outline">
                        <h4 class="text-decoration-underline">Project Title</h4>
                        <input placeholder="Enter a title." asp-for="Project.ProjectTitle" type="text" class="form-control w-75" name="ProjectTitle" data-val;="True" data-val-required="A title is required." />
                        <span asp-validation-for="Project.ProjectTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <h4 class="text-decoration-underline">Project Manager Assignment</h4>
                        <select class="form-control shadow w-75" asp-for="SelectedProjectManagerId" asp-items="@(Model._peopleDataAccess.GetProjectManagerNames(Model.ProjectManagers))">
                            <option value="0">-- Assign a project manager --</option>
                        </select>
                        <span asp-validation-for="Project.ProjectManagerId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-5">
                <div class="col">
                    <div class="form-outline">
                        <h4 class="text-decoration-underline">Start Date</h4>
                        <input asp-for="Project.Date" type="date" class="shadow form-control w-75" asp-format="{0:MM-dd-yyyy}" name="StartDate" />
                        <span asp-validation-for="Project.Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <h4 class="text-decoration-underline">Priority</h4>
                        <select asp-for="Project.Priority" class="form-control shadow w-75" name="Priority">
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                        </select>
                        <span asp-validation-for="Project.Priority" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-5">
                <div class="form-outline">
                    <h4 class="text-decoration-underline">Description</h4>
                    <textarea placeholder="Enter a description." rows="4" asp-for="Project.Description" type="text" class="form-control" name="Description" data-val;="True" data-val-required="A description is required."></textarea>
                    <span asp-validation-for="Project.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-5">
                <a class="btn btn-secondary shadow" asp-page="/Projects/ProjectIndex">Back</a>
                <input type="submit" value="Add Project" class="btn btn-primary shadow" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

