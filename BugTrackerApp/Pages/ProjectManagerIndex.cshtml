@page
@model BugTrackerApp.Pages.ProjectManagerIndexModel
@{
}

<div class="mx-auto">
    <div class="container mx-auto" id="container_items">
        <div class="mb-3">
        </div>
        <!--UI for mobile view-->
        @foreach (var ProjectManager in Model.ProjectManagers)
        {
            <div class="new-row d-sm-none shadow">
                <div class="col-md-10 mx-auto">
                    <img src="images/fixing-problem.png" class="w-25" />
                    <h2 class="mt-3"><span class="text-primary">Bug</span> <span class="text-secondary">Details</span></h2>
                    <hr />
                    <dl class="dl-horizontal mt-4 mx-auto">
                        <dt id="text_underline">@Html.DisplayNameFor(modelItem => ProjectManager.ProjectManagerId)</dt>
                        <dd class="mb-4">@Html.DisplayFor(modelItem => ProjectManager.ProjectManagerId)</dd>

                        <dt id="text_underline">Project Manager Name</dt>
                        <dd class="mb-4">@Html.DisplayFor(modelItem => ProjectManager.FirstName)</dd>
                    </dl>
                    <div class="mb-4">
                        <form method="post" id="center_text" asp-page-handler="View" asp-route-id="@ProjectManager.ProjectManagerId">
                            <a class="btn btn-sm btn-dark shadow" asp-page="ViewBug" asp-route-id="@ProjectManager.ProjectManagerId">View</a>
                        </form>
                    </div>
                </div>
            </div>
        }
        <!--UI for desktop view-->
        <div class="row mx-auto d-sm-inline-flex d-none">
            @foreach (var ProjectManager in Model.ProjectManagers)
            {
                <div class="col-3 mb-3">
                    <div class="card new-row" id="row_hover">
                        <h5 class="card-title mx-auto mt-3">Date</h5>
                        <div class="mx-auto" id="card-text">
                            @Html.DisplayFor(modelItem => ProjectManager.ProjectManagerId)
                        </div>
                        <h5 class="card-title mt-4 mx-auto">Manager Name</h5>
                        <div class="mx-auto px-2" id="card-text">
                            @Html.DisplayFor(modelItem => ProjectManager.FirstName)
                        </div>
                        <div class="mx-auto">
                            <form method="post" asp-page-handler="View" asp-route-id="@ProjectManager.ProjectManagerId">
                                <a class="btn btn-sm btn-secondary shadow mx-auto mt-5" asp-page="ViewBug" asp-route-id="@ProjectManager.ProjectManagerId">View Bug</a>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="mx-auto">
            <a class="my-5 btn btn-md btn-secondary mx-auto shadow" href="AddBug" style="display: inline-flex">+ Add a PM</a>
        </div>
    </div>
</div>
