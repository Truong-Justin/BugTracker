<div class="container">
    <div class="card px-5 py-5 mx-5 mt-5 shadow bg-light">
        <h1 class="text-secondary text-decoration-underline text-center">Manager Details</h1>
        <hr />
        <div class="row my-5">
            <div class="col">
                <div class="form-outline">
                    <h3 class="text-decoration-underline">First Name</h3>
                    <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.Employee.FirstName)</h5>
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <h3 class="text-decoration-underline">Last Name</h3>
                    <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.Employee.LastName)</h5>
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col">
                <div class="form-outline">
                    <h3 class="text-decoration-underline">Employee Id</h3>
                    <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.Employee.EmployeeId)</h5>
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <h3 class="text-decoration-underline">Hire Date</h3>
                    <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.Employee.HireDate)</h5>
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col">
                <div class="form-outline">
                    <h3 class="text-decoration-underline">Address</h3>
                    <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.Employee.Address)</h5>
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <h3 class="text-decoration-underline">Zip Code</h3>
                    <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.Employee.Zip)</h5>
                </div>
            </div>
        </div>
        <div class="row my-5">
            <div class="col">
                <div class="form-outline">
                    <h3 class="text-decoration-underline">Phone Number</h3>
                    <h5 class="fw-light">@Html.DisplayFor(modelItem => modelItem.Employee.Phone)</h5>
                </div>
            </div>
        </div>
        <div class="mt-5">
            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Employee.EmployeeId">
                <a class="btn btn-secondary shadow" asp-page="/Employees/EmployeeIndex">Back</a>
                <button class="btn btn-danger shadow" type="submit">Delete</button>
            </form>
        </div>
    </div>
</div>