@page
@model BugTrackerApp.Pages.Employees.AddEmployeeModel
@{
    ViewData["Title"] = "Add Employee";
}

<div class="container">
    <div class="my-5 mx-auto">
        <div class="card shadow bg-light">
            <div class="col-md-11 mx-auto">
                <h1 class="mt-3 text-center text-decoration-underline">Add Employee</h1>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card px-3 py-3 mx-3 my-4 shadow">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-4 mt-4">
                            <label class="control-label">Hire Date</label>
                            <input asp-for="Employee.HireDate" type="date" class="form-control shadow" asp-format="{0:MM-dd-yyyy}" name="HireDate" data-val="true" data-val-required="A hire date must be chosen." />
                            <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="control-label">First Name</label>
                            <input asp-for="Employee.FirstName" class="form-control shadow" name="FirstName" data-val="true" data-val-required="A first name is required." />
                            <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="control-label">Last Name</label>
                            <input asp-for="Employee.LastName" class="form-control shadow" name="LastName" data-val="true" data-val-required="A last name is required." />
                            <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Employee.Phone" class="control-label"></label>
                            <input asp-for="Employee.Phone" class="form-control shadow" name="Phone" data-val="true" data-val-required="A phone number is required." />
                            <span asp-validation-for="Employee.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Employee.Zip" class="control-label"></label>
                            <input asp-for="Employee.Zip" class="form-control shadow" name="Zip" data-val="true" data-val-required="A zip-code is required." />
                            <span asp-validation-for="Employee.Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Employee.Address" class="control-label"></label>
                            <input asp-for="Employee.Address" class="form-control shadow" name="Address" data-val="true" data-val-required="An address is required." />
                            <span asp-validation-for="Employee.Address" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="text-center">
                            <a class="btn btn-secondary shadow" asp-page="/Employees/EmployeeIndex">Back</a>
                            <input type="submit" value="Save" class="btn btn-primary shadow" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
