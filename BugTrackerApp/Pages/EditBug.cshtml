@page
@model BugTrackerApp.Pages.EditBugModel
@{
    ViewData["Title"] = "Edit Bug";
}

<div class="container">
    <h2>Edit Bug</h2>
    <hr />
    <div class="row">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="bug.Date" class="control-label"></label>
                <input asp-for="bug.Date" class="form-control" />
                <span asp-validation-for="bug.Date" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="bug.Description" class="control-label"></label>
                <input asp-for="bug.Description" class="form-control" />
                <span asp-validation-for="bug.Description"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="bug.Priority" class="control-label"></label>
                <input asp-for="bug.Priority" class="form-control" />
                <span asp-validation-for="bug.Priority"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="bug.Assignment" class="control-label"></label>
                <input asp-for="bug.Assignment" class="form-control" />
                <span asp-validation-for="bug.Assignment"></span>
            </div>
            <div>
                <input type="submit" value="save" class="btn btn-dark mb-4" />
            </div>
        </form>
    </div>
    <a asp-page="/Index">Back To Home</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


