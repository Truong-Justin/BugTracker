@page
@model BugTrackerApp.Pages.EditBugModel
@{
    ViewData["Title"] = "Edit Bug";
}


<div class="container">
        <div class="my-5 mx-auto" id="container_items">
            <div class="row">
                <div class="col-md-11 mx-auto">
                    <h2 class="mt-3 mx-auto"><span class="text-primary">Edit</span> <span class="text-secondary">Bug</span></h2>
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-4 mt-4">
                            <label asp-for="bug.Date" class="control-label"></label>
                            <input asp-for="bug.Date" type="text" class="form-control" asp-format="{0:MM-dd-yyyy}" />
                            <span asp-validation-for="bug.Date" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="bug.Description" class="control-label"></label>
                            <input asp-for="bug.Description" class="form-control" data-val="true" data-val-required="A description is required" />
                            <span asp-validation-for="bug.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="bug.Priority" class="control-label"></label>
                            <select asp-for="bug.Priority" class="form-control">
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                            </select>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="bug.Assignment" class="control-label"></label>
                            <select asp-for="bug.Assignment" class="form-control">
                                <option value="Lucy">Lucy</option>
                                <option value="Luke">Luke</option>
                                <option value="Allison">Allison</option>
                                <option value="Justin">Justin</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <a class="btn btn-secondary" asp-page="/Index">Home</a>
                            <a class="btn btn-dark" asp-page="ViewBug" asp-route-id="@Model.bug.Id">Back to Details</a>
                            <input type="submit" value="save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


