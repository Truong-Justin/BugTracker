<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugTrackerApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugTrackerApp.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3">
            <div class="container" style="max-width:75%">
                <a href="/Index" class="navbar-brand">Bug <span class="text-primary">Tracker</span></a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navmenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navmenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="/Index" class="nav-link text-light">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="/AddBug" class="nav-link text-light">Add Bug</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.justintruong.studio" class="nav-link text-light">Back To Portfolio</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!--Banner-->
    <section class="p-5 bg-dark">
        <div class="container" style="max-width:75%">
            <div class="row align-items-center justify-content-between" style="margin-bottom: 0px;" id="row_hover">
                <div class="col-md p-5">
                    <h2 class="text-secondary" id="project_titles" style="text-decoration-line:underline"><span class="text-primary">Bug</span> Tracker App</h2>
                    <p class="text-dark">
                        A fullstack application that uses C#, ASP.Net Core Razor Pages, and SQLite. The app lets the user Create, Read, Update, and Delete bug records from a database file.
                    </p>
                </div>
                
                    <img src="images/bugPic.svg" class="img-fluid w-25 my-3 d-none d-sm-block" alt="Stock App">
                
            </div>
        </div>

    </section>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
