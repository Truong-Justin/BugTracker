<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugTrackerApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugTrackerApp.styles.css" asp-append-version="true" />
</head>
<body>
    <section class="hero-banner">
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container">
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navmenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navmenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="/Projects/ProjectIndex" class="nav-link text-light">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.justintruong.studio" class="nav-link text-light">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://github.com/Truong-Justin/BugTracker" class="nav-link text-light">GitHub</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="section">
            <h1 class="text-center hero-title-text">BUG & PROJECT MANAGEMENT</h1>
            <h4 class="hero-small-text d-md-block d-none">Keeping track of bugs and projects, all in one place.</h4>
        </div>
    </section>
    <div class="container">
        <div class="text-center my-3">
            <a href="/Projects/ProjectIndex" class="btn-sm btn-secondary shadow mx-1">
                Projects
            </a>
            <a href="/Bugs/Index" class="btn-sm btn-secondary shadow mx-1">
                Bugs
            </a>
            <a href="/Employees/EmployeeIndex" class="btn-sm btn-secondary shadow mx-1">
                Employees
            </a>
            <a href="/ProjectManagers/ProjectManagerIndex" class="btn-sm btn-secondary shadow mx-1">
                Managers
            </a>
        </div>
    </div>
            <div>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>

            @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
